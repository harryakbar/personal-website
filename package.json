    "date-fns": "^2.28.0",
    "gray-matter": "^4.0.3",
    "next": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.4",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.8",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4",
    "ts-jest": "^29.2.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Running ESLint...' && npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "eslint --fix",
      "npx prettier --write"
    ],
    "*.md": [
      "npx prettier --write"
    ]
  }
