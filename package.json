    "lint": "next lint",
    "prepare": "husky",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "precommit": "run-s lint:staged"
  },
  "dependencies": {
    "@vercel/analytics": "^0.1.5",
    "@vercel/speed-insights": "^1.0.12",
    "classnames": "^2.3.1",
